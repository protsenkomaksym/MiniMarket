@{
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <div class="card-body">
            <h1 class="card-title pricing-card-title">$@Model.Price</h1>
            @if (Model.discount > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <small>(@Model.discount% off)</small>
                </div>
            }
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><small class="text-muted">Created: @Model.Created.ToString("dd/MM/yyyy")</small></p>
        </div>
    </div>
</div>