@model MiniMarket.Web.Models.AddNewItemViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h4>Create new item</h4>
<hr />


<form asp-action="NewItem" asp-controller="Home" method="post">

    <div asp-validation-summary="All"></div>
    <div class="row">
        <input type="hidden" asp-for="id" />
        <div class="row">
            <div class="col-5">
                <label for="address" class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                <label for="address" class="form-label">Description</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                <label for="address" class="form-label">Price</label>
                <input type="text" class="form-control" asp-for="Price" placeholder="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <label for="country" class="form-label">Category</label>
                <select class="form-select" asp-items="@Model.lstCategories" asp-for="idCategory"></select>
                <div class="invalid-feedback">
                    Please select a valid country.
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                <label for="address" class="form-label">Discount</label>
                <input type="text" class="form-control" asp-for="Discount" placeholder="Discount">
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</form>