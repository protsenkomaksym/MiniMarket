@model MiniMarket.Web.Models.AddNewItemViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h4>Create new item</h4>
<hr />

@using (Html.BeginForm("AddNewItem", "Home", FormMethod.Post))
{
    <div class="row">

        <div class="row">
            <div class="col-5">
                <label for="address" class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="@Model.Name" id="Name" placeholder="Name">
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                <label for="address" class="form-label">Description</label>
                <input type="text" class="form-control" asp-for="@Model.Description" id="Description" placeholder="Description">
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                <label for="address" class="form-label">Price</label>
                <input type="text" class="form-control" asp-for="@Model.Price" id="Price" placeholder="Price">
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <label for="country" class="form-label">Country</label>
                <select class="form-select" asp-items="@Model.lstCategories" asp-for="@Model.idCategory"></select>
                <div class="invalid-feedback">
                    Please select a valid country.
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
