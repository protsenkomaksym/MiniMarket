@model MiniMarket.Web.Models.AdminViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-md-6">
        <h4>Admin</h4>
        All catalog
        <hr />
        <a class="btn btn-primary" asp-action="NewItem" asp-controller="Home">Add new item</a>
        <br />
        <br />
        <ol class="list-group list-group-numbered">
            @if (Model.lstItems.Count == 0)
            {
                <div class="alert alert-warning" role="alert">
                    No items found
                </div>
            }

            @foreach (MiniMarket.Entities.Dto.ItemDto i in Model.lstItems)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold"><a asp-action="NewItem" asp-controller="Home" asp-route-id="@i.Id">@i.Name (Edit)</a></div>
                        @i.Description
                    </div>
                    <span class="badge bg-primary rounded-pill">$@i.Price</span>
                </li>
            }
        </ol>
    </div>
</div>